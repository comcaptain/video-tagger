{
  "name": "video-tagger",
  "version": "0.1.0",
  "private": true,
  "main": "build/electron/main.js",
  "homepage": "./",
  "author": {
    "name": "孙国强",
    "email": "htmlcaptain@gmail.com",
    "url": "https://github.com/comcaptain"
  },
  "build": {
    "appId": "com.sgq.video-tagger",
    "productName": "Video Tagger",
    "copyright": "Copyright © 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.24",
    "@types/mongodb": "^3.3.13",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "archiver": "^3.1.1",
    "chinese-to-pinyin": "^1.3.1",
    "dateformat": "^3.0.3",
    "electron-find": "^1.0.6",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.0.0",
    "fs-extra": "^8.1.0",
    "mongodb": "^3.3.5",
    "node-process-windows": "https://github.com/adamsoutar/node-process-windows.git#master",
    "node-sass": "^4.13.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "robotjs": "^0.6.0"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build && yarn build-main",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "build-main": "tsc -b tsconfig.main.json",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron --inspect=5858 .",
    "dev-server": "concurrently \"cross-env BROWSER=none yarn start\" \"tsc -b tsconfig.main.json -w\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder -w",
    "backup": "yarn build-main && node build/electron/backup/DataBackuper.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "electron": "^15.5.5",
    "electron-builder": "^21.2.0",
    "typescript": "^3.7.4",
    "wait-on": "^3.3.0"
  }
}
